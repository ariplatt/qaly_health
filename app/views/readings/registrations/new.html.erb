                <% time_class << " is-invalid" %>
              <% else %>
                <% time_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :time %>

            <%= f.time_select :time, class: "#{time_class} col-sm-2" %>

            <% if time_was_invalid %>
              <% resource.errors.full_messages_for(:time).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for time end -->

          <!-- Devise Input for date start -->
