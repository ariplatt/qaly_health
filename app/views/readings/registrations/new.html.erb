                </div>
              <% end %>
            <% end %>
          </div>
          <!-- Devise Input for brain_pressure_level end -->

          <!-- Devise Input for brain_temperature_level start -->
          <div class="form-group">
            <% brain_temperature_level_was_invalid = resource.errors.include?(:brain_temperature_level) %>

            <% brain_temperature_level_class = "form-control" %>

            <% if was_validated %>
              <% if brain_temperature_level_was_invalid %>
                <% brain_temperature_level_class << " is-invalid" %>
              <% else %>
