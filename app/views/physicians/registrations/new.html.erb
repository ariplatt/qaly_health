<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        <%= resource_name != "user" ? resource_name.to_s.titleize : "" %> Sign Up
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <% form_html_options = { novalidate: true, class: "mb-3" } %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, class: email_class, autofocus: true %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>


          <div class="form-group">
            <% user_name_was_invalid = resource.errors.include?(:user_name) %>

            <% user_name_class = "form-control" %>

            <% if was_validated %>
              <% if user_name_was_invalid %>
                <% user_name_class << " is-invalid" %>
              <% else %>
                <% user_name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :user_name %>

            <%= f.text_field :user_name, :class => user_name_class, :placeholder => "Enter user name" %>

            <% if user_name_was_invalid %>
              <% resource.errors.full_messages_for(:user_name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% patient_was_invalid = resource.errors.include?(:patient) %>

            <% patient_class = "form-control" %>

            <% if was_validated %>
              <% if patient_was_invalid %>
                <% patient_class << " is-invalid" %>
              <% else %>
                <% patient_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :patient %>

            <%= f.text_field :patient, :class => patient_class, :placeholder => "Enter patient" %>

            <% if patient_was_invalid %>
              <% resource.errors.full_messages_for(:patient).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% patient_id_was_invalid = resource.errors.include?(:patient_id) %>

            <% patient_id_class = "form-control" %>

            <% if was_validated %>
              <% if patient_id_was_invalid %>
                <% patient_id_class << " is-invalid" %>
              <% else %>
                <% patient_id_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :patient_id %>

            <%= f.number_field :patient_id, :class => patient_id_class, :placeholder => "Enter patient id" %>

            <% if patient_id_was_invalid %>
              <% resource.errors.full_messages_for(:patient_id).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% hospital_id_was_invalid = resource.errors.include?(:hospital_id) %>

            <% hospital_id_class = "form-control" %>

            <% if was_validated %>
              <% if hospital_id_was_invalid %>
                <% hospital_id_class << " is-invalid" %>
              <% else %>
                <% hospital_id_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :hospital_id %>

            <%= f.number_field :hospital_id, :class => hospital_id_class, :placeholder => "Enter hospital id" %>

            <% if hospital_id_was_invalid %>
              <% resource.errors.full_messages_for(:hospital_id).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% hospital_name_was_invalid = resource.errors.include?(:hospital_name) %>

            <% hospital_name_class = "form-control" %>

            <% if was_validated %>
              <% if hospital_name_was_invalid %>
                <% hospital_name_class << " is-invalid" %>
              <% else %>
                <% hospital_name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :hospital_name %>

            <%= f.text_field :hospital_name, :class => hospital_name_class, :placeholder => "Enter hospital name" %>

            <% if hospital_name_was_invalid %>
              <% resource.errors.full_messages_for(:hospital_name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <%= f.button class: "btn btn-outline-primary btn-block" %>

          <hr>

          <%= render "physicians/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
