      <% physician.errors.full_messages_for(:patient).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for patient_id end -->
  <!-- Label and input for hospital_id start -->
  <div class="form-group">
    <% hospital_class = "form-control" %>
    <% hospital_was_invalid = physician.errors.include?(:hospital) %>

    <% if was_validated %>
      <% if hospital_was_invalid %>
        <% hospital_class << " is-invalid" %>
      <% else %>
        <% hospital_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :hospital_id %>
    <!-- Input for hospital_id start -->
    <%= f.number_field :hospital_id, class: hospital_class, placeholder: "Enter hospital" %>
    <!-- Input for hospital_id end -->
    <% if hospital_was_invalid %>
      <% physician.errors.full_messages_for(:hospital).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for hospital_id end -->
  <!-- Label and input for hospital_name start -->
  <div class="form-group">
    <% hospital_name_class = "form-control" %>
    <% hospital_name_was_invalid = physician.errors.include?(:hospital_name) %>

    <% if was_validated %>
      <% if hospital_name_was_invalid %>
        <% hospital_name_class << " is-invalid" %>
      <% else %>
        <% hospital_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :hospital_name %>
    <!-- Input for hospital_name start -->
    <%= f.text_field :hospital_name, class: hospital_name_class, placeholder: "Enter hospital name" %>
