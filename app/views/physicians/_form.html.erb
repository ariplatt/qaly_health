<% was_validated = physician.errors.any? %>

<%= form_with(model: physician, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for user_name start -->
  <div class="form-group">
    <% user_name_class = "form-control" %>
    <% user_name_was_invalid = physician.errors.include?(:user_name) %>

    <% if was_validated %>
      <% if user_name_was_invalid %>
        <% user_name_class << " is-invalid" %>
      <% else %>
        <% user_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_name %>
    <!-- Input for user_name start -->
    <%= f.text_field :user_name, class: user_name_class, placeholder: "Enter user name" %>
    <!-- Input for user_name end -->
    <% if user_name_was_invalid %>
      <% physician.errors.full_messages_for(:user_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for user_name end -->
  <!-- Label and input for patient start -->
  <div class="form-group">
    <% patient_class = "form-control" %>
    <% patient_was_invalid = physician.errors.include?(:patient) %>

    <% if was_validated %>
      <% if patient_was_invalid %>
        <% patient_class << " is-invalid" %>
      <% else %>
        <% patient_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :patient %>
    <!-- Input for patient start -->
    <%= f.text_field :patient, class: patient_class, placeholder: "Enter patient" %>
    <!-- Input for patient end -->
    <% if patient_was_invalid %>
      <% physician.errors.full_messages_for(:patient).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for patient end -->
  <!-- Label and input for patient_id start -->
  <div class="form-group">
    <% patient_class = "form-control" %>
    <% patient_was_invalid = physician.errors.include?(:patient) %>

    <% if was_validated %>
