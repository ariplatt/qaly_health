      <% physician.errors.full_messages_for(:hospital_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for hospital_name end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
