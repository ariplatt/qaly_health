        <% patient_class << " is-invalid" %>
      <% else %>
        <% patient_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :patient_id %>
    <!-- Input for patient_id start -->
    <%= f.number_field :patient_id, class: patient_class, placeholder: "Enter patient" %>
    <!-- Input for patient_id end -->
