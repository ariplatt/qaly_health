<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Demographics

    <a data-toggle="collapse" href="#user_demographics_new_form">
      Add demographic
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.demographics.each do |demographic| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to demographic, demographic %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_demographics_new_form">
        <%= render partial: "users/user_demographics_new_form" %>
      </div>
    </div>

  </ul>
</div>
