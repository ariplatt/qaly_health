<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Reading For Patients

    <a data-toggle="collapse" href="#user_reading_for_patients_new_form">
      Add reading for patient
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.reading_for_patients.each do |reading_for_patient| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to reading_for_patient, reading_for_patient %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_reading_for_patients_new_form">
        <%= render partial: "users/user_reading_for_patients_new_form" %>
      </div>
    </div>

  </ul>
</div>
