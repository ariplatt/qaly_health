<% was_validated = demographic.errors.any? %>

<%= form_with(model: demographic, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% user_name_class = "form-control" %>
    <% user_name_was_invalid = demographic.errors.include?(:user_name) %>

    <% if was_validated %>
      <% if user_name_was_invalid %>
        <% user_name_class << " is-invalid" %>
      <% else %>
        <% user_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_name %>
    <%= f.text_field :user_name, class: user_name_class, placeholder: "Enter user name" %>
    <% if user_name_was_invalid %>
      <% demographic.errors.full_messages_for(:user_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% disease_name_class = "form-control" %>
    <% disease_name_was_invalid = demographic.errors.include?(:disease_name) %>

    <% if was_validated %>
      <% if disease_name_was_invalid %>
        <% disease_name_class << " is-invalid" %>
      <% else %>
        <% disease_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :disease_name %>
    <%= f.text_field :disease_name, class: disease_name_class, placeholder: "Enter disease name" %>
    <% if disease_name_was_invalid %>
      <% demographic.errors.full_messages_for(:disease_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% disease_class = "form-control" %>
    <% disease_was_invalid = demographic.errors.include?(:disease) %>

    <% if was_validated %>
      <% if disease_was_invalid %>
        <% disease_class << " is-invalid" %>
      <% else %>
        <% disease_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :disease_id %>
    <%= f.number_field :disease_id, class: disease_class, placeholder: "Enter disease" %>
    <% if disease_was_invalid %>
      <% demographic.errors.full_messages_for(:disease).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% date_diagnosed_class = "form-control" %>
    <% date_diagnosed_was_invalid = demographic.errors.include?(:date_diagnosed) %>

    <% if was_validated %>
      <% if date_diagnosed_was_invalid %>
        <% date_diagnosed_class << " is-invalid" %>
      <% else %>
        <% date_diagnosed_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :date_diagnosed %>
    <%= f.date_select :date_diagnosed, class: date_diagnosed_class, placeholder: "Enter date diagnosed" %>
    <% if date_diagnosed_was_invalid %>
      <% demographic.errors.full_messages_for(:date_diagnosed).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% time_diagnosed_class = "form-control" %>
    <% time_diagnosed_was_invalid = demographic.errors.include?(:time_diagnosed) %>

    <% if was_validated %>
      <% if time_diagnosed_was_invalid %>
        <% time_diagnosed_class << " is-invalid" %>
      <% else %>
        <% time_diagnosed_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :time_diagnosed %>
    <%= f.time_select :time_diagnosed, class: time_diagnosed_class, placeholder: "Enter time diagnosed" %>
    <% if time_diagnosed_was_invalid %>
      <% demographic.errors.full_messages_for(:time_diagnosed).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% description_of_illness_class = "form-control" %>
    <% description_of_illness_was_invalid = demographic.errors.include?(:description_of_illness) %>

    <% if was_validated %>
      <% if description_of_illness_was_invalid %>
        <% description_of_illness_class << " is-invalid" %>
      <% else %>
        <% description_of_illness_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description_of_illness %>
    <%= f.text_area :description_of_illness, class: description_of_illness_class, placeholder: "Enter description of illness" %>
    <% if description_of_illness_was_invalid %>
      <% demographic.errors.full_messages_for(:description_of_illness).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
