<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Physicians

    <a data-toggle="collapse" href="#demographic_physicians_new_form">
      Add physician
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @demographic.physicians.each do |physician| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to physician, physician %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="demographic_physicians_new_form">
        <%= render partial: "demographics/demographic_physicians_new_form" %>
      </div>
    </div>

  </ul>
</div>
