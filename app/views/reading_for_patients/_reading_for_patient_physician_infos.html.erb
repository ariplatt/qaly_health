<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Physician Infos

    <a data-toggle="collapse" href="#reading_for_patient_physician_infos_new_form">
      Add physician info
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @reading_for_patient.physician_infos.each do |physician_info| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to physician_info, physician_info %>

        <%= link_to physician_info, method: :delete, data: { confirm: "Do you really want to delete this physician_info" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="reading_for_patient_physician_infos_new_form">
        <%= render partial: "reading_for_patients/reading_for_patient_physician_infos_new_form" %>
      </div>
    </div>

  </ul>
</div>
