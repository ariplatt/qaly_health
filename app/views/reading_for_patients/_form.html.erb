<% was_validated = reading_for_patient.errors.any? %>

<%= form_with(model: reading_for_patient, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% brain_oxygen_level_class = "form-control" %>
    <% brain_oxygen_level_was_invalid = reading_for_patient.errors.include?(:brain_oxygen_level) %>

    <% if was_validated %>
      <% if brain_oxygen_level_was_invalid %>
        <% brain_oxygen_level_class << " is-invalid" %>
      <% else %>
        <% brain_oxygen_level_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :brain_oxygen_level %>
    <%= f.number_field :brain_oxygen_level, class: brain_oxygen_level_class, placeholder: "Enter brain oxygen level" %>
    <% if brain_oxygen_level_was_invalid %>
      <% reading_for_patient.errors.full_messages_for(:brain_oxygen_level).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
